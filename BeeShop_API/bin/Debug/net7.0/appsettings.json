{
  "ConnectionStrings": {
    "ConnectionString": "Data Source=ROKLEE;Initial Catalog=BEESHOP;Connect Timeout=30;Integrated Security=True;Trust Server Certificate=True"
  },
  "App": {
    "Name": "BeeShop_API"
  },
  "Authentication": {
    "Token": {
      "ServerSigningPassword": "One password of at least 16 characters",
      "DurationInSeconds": 900
    },
    "RefreshToken": {
      "DurationInHours": 24
    },
    "ReCaptcha": {
      "V2": {
        "Url": "https://www.google.com/recaptcha/api/siteverify?secret={0}&response={1}",
        "PrivateKey": "--Recaptcha Private Key--"
      },
      "V3": {
        "Url": "https://www.google.com/recaptcha/api/siteverify?secret={0}&response={1}",
        "PrivateKey": "--Recaptcha Private Key--"
      }
    }
  },
  "CORS": {
    "Allow-Origins": [
      "http://localhost:4200"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    },
    "File": {
      "Path": "app.log",
      "Append": true,
      "MinLevel": "Warning",
      "FileSizeLimitBytes": 0,
      "MaxRollingFiles": 0
    }
  }
}
